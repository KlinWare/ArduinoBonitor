<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.klinware.arduinobonitor.DevicesActivity">

        <RelativeLayout
            android:id="@+id/btnScanLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="#00979C">
            <!--
            android:background="#09835E"
            -->

            <Button
                android:id="@+id/btnScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:text="@string/btnScan"
                android:background="#CCCCCC"
                android:onClick="click"/>
        </RelativeLayout>


        <ListView
            android:id="@+id/btList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/btnScanLayout"
            android:background="#000000"/>

</RelativeLayout>
